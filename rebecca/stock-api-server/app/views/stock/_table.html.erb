<table class="table">
  <tr>
    <th class="text-center">排名</th>
    <th>代號</th>
    <th>名稱</th>
    <th>開盤價</th>
    <th>最高價</th>
    <th>最低價</th>
    <th>昨收盤</th>
    <th>今收盤</th>
    <th>成交量</th>
    <th>漲跌</th>
    <th>漲跌幅</th>
  </tr>

  <% @stocks.each do |stock| %>
    <tr>
      <td class="text-center"><%= stock.rank %></td>
      <td><%= stock.stock_code %></td>
      <td><%= stock.stock_name %></td>
      <td><%= stock.opening_price %></td>
      <td><%= stock.highest_price %></td>
      <td><%= stock.lowest_price %></td>
      <td><%= stock.ytd_closing_price %></td>
      <td><%= stock.closing_price %></td>
      <td><%= number_with_delimiter(stock.turnover, :delimiter => ',') %></td>
      <%= add_class(stock.change) %>
      <td><%= stock.change_range %>%</td>
    </tr>
  <% end %>
</table>
